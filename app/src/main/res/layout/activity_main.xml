<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:gauge="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <com.example.alex.testapp.GaugeView
        android:id="@+id/speedometer_gauge_view_ActivityMain"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#ffffff"
        gauge:needleWidth="0.010"
        gauge:needleHeight="0.40"
        gauge:scaleStartValue="0"
        gauge:textUnit="MPH"
        gauge:scaleEndValue="60"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:background="@drawable/action_button_bg"
        android:id="@+id/start_btn_ActivityMain"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
